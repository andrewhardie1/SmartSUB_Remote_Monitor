<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartSUB_Remote_Monitor.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="blueColour">#1E90FF</Color>
            <Color x:Key="whiteColour">#FFFFFF</Color>
            <Color x:Key="darkColour">#333333</Color>

            <Style x:Key="normalEntry" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColour}"/>
                <Setter Property="TextColor" Value="{StaticResource whiteColour}"/>
            </Style>
            
            <Style x:Key="normalButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueColour}"/>
                <Setter Property="TextColor" Value="{StaticResource whiteColour}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>